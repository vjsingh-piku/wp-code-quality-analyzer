{
  "name": "agency/wp-code-quality-analyzer",
  "type": "project",
  "require-dev": {
  "squizlabs/php_codesniffer": "^3.10",
  "wp-coding-standards/wpcs": "^3.1",
  "phpcsstandards/phpcsextra": "^1.2",
  "phpcsstandards/phpcsutils": "^1.0",
  "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "WCQA\\": "src/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcsstandards/phpcsextra,vendor/phpcsstandards/phpcsutils"
    ],
    "post-update-cmd": [
      "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcsstandards/phpcsextra,vendor/phpcsstandards/phpcsutils"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
}
